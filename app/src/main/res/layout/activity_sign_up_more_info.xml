<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blue_background"
    tools:context="be.uclouvain.lsinf1225.groupel31.wishlist.Views.SignUpMoreInfo">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="60sp"
        android:fontFamily="cursive"
        android:textColor="@color/LightGray"
        android:layout_marginTop="30dp"
        android:layout_marginStart="100dp"
        android:gravity="center"
        />


    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_below="@id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/picture_profile"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/no_picture"
                android:layout_marginTop="30dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/address"
                    android:fontFamily="cursive"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/White"/>
                <EditText
                    android:id="@+id/address_input"
                    android:hint="@string/address"
                    android:fontFamily="cursive"
                    android:layout_marginStart="105dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/favorite_color"
                    android:fontFamily="cursive"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/White"/>
                <EditText
                    android:id="@+id/fav_color_input"
                    android:hint="@string/favorite_color"
                    android:fontFamily="cursive"
                    android:layout_marginStart="70dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/favorite_meal"
                    android:fontFamily="cursive"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/White"/>
                <EditText
                    android:id="@+id/fav_meal_input"
                    android:hint="@string/favorite_meal"
                    android:fontFamily="cursive"
                    android:layout_marginStart="70dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sport"
                    android:fontFamily="cursive"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/White"/>
                <EditText
                    android:id="@+id/sport_input"
                    android:layout_marginStart="120dp"
                    android:hint="@string/sport"
                    android:fontFamily="cursive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hobby"
                    android:fontFamily="cursive"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/White"/>
                <EditText
                    android:id="@+id/hobby_input"
                    android:hint="@string/hobby"
                    android:fontFamily="cursive"
                    android:layout_marginStart="120dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/save_info_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="105dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/simple_button"
        android:layout_below="@id/scroll_view"
        android:text="@string/save_info"
        android:fontFamily="cursive"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/White"/>

    <TextView
        android:id="@+id/pass_btn"
        android:layout_marginTop="10dp"
        android:layout_marginStart="175dp"
        android:layout_below="@id/save_info_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pass"
        android:textSize="12sp"/>

</RelativeLayout>
