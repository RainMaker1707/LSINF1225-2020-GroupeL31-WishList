<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blue_background"
    android:orientation="vertical"
    tools:context="be.uclouvain.lsinf1225.groupel31.wishlist.Views.LayoutWishList"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="60sp"
        android:text="@string/app_name"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:fontFamily="cursive"
        />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/picture_profile"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/no_picture"
            android:layout_marginStart="60dp"
            android:layout_marginTop="30dp"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/Black"/>

    </LinearLayout>

    <TextView
        android:id="@+id/page_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:fontFamily="cursive"
        android:layout_marginStart="50dp"
        android:layout_gravity="start"
        android:gravity="start"
        />

    <TextView
        android:id="@+id/wl_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:height="0dp"
        android:textSize="25sp"
        android:fontFamily="cursive"
        android:layout_marginStart="50dp"
        android:layout_gravity="start"
        android:gravity="start"
        />


    <GridView
        android:id="@+id/news_grid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numColumns="1"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="60dp"
        >

    </GridView>

    <Button
        android:id="@+id/create_wishlist"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="-50dp"
        android:background="@drawable/simple_button"
        android:text="@string/create_wishlist_button"
        />



</LinearLayout>