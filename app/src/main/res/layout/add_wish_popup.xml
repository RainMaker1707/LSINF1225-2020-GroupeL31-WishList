<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:layout_width="300dp"
    android:layout_height="400dp"
    android:background="@color/Gray">

    <TextView
        android:id="@+id/quit_popup"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:text="@string/x"
        android:textAlignment="center"
        android:layout_marginStart="270dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/round"
        android:layout_marginEnd="10dp"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/friend_picture_popup"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:src="@drawable/picture_gift"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/name_popup"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/user_name"
            android:layout_marginStart="20dp"
            android:fontFamily="cursive"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/price_popup"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/user_name"
            android:layout_marginStart="50dp"
            android:fontFamily="cursive"
            android:textStyle="bold"
            />
    </LinearLayout>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/description"
        android:fontFamily="cursive"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        />
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="80dp">
        <TextView
            android:id="@+id/desc_popup"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:text="@string/lorem"
            android:layout_marginStart="20dp"
            android:fontFamily="cursive"
            android:textStyle="bold"
            />
    </ScrollView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/add_btn"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="@string/add_wish"
            android:textAlignment="center"
            android:gravity="center_vertical"
            android:layout_gravity="center"
            android:background="@color/Green"
            android:fontFamily="cursive"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/cancel_btn"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="@string/cancel"
            android:textAlignment="center"
            android:gravity="center_vertical"
            android:layout_gravity="center"
            android:background="@color/Red_alpha"
            android:fontFamily="cursive"
            android:textStyle="bold"
            />

    </LinearLayout>
</LinearLayout>